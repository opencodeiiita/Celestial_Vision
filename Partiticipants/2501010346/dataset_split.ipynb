import os
import shutil
import random
from pathlib import Path
import math
class DatasetSplitter:
    def __init__(self, source_dir, output_dir, split_ratio=(0.7, 0.2, 0.1), seed=42):
        self.source_dir = Path(source_dir)
        self.output_dir = Path(output_dir)
        self.train_ratio, self.test_ratio, self.eval_ratio = split_ratio
        self.seed = seed
        random.seed(seed)
        if not math.isclose(sum(split_ratio), 1.0):
            raise ValueError("Split ratios must sum to 1.0")
    def _create_dirs(self, class_name):
        for split in ["train", "test", "eval"]:
            dir_path = self.output_dir / split / class_name
            dir_path.mkdir(parents=True, exist_ok=True)
    def _get_images(self, class_path):
        return [i for i in class_path.iterdir() if i.suffix.lower() in [".jpg", ".jpeg", ".png"]]
    def split(self):
        for class_dir in self.source_dir.iterdir():
            if not class_dir.is_dir():
                continue
            images = self._get_images(class_dir)
            if not images:
                continue
            random.shuffle(images)
            self._create_dirs(class_dir.name)
            t = len(images)
            train_end = int(t * self.train_ratio)
            test_end = train_end + int(t * self.test_ratio)
            splits = {
                "train": images[:train_end],
                "test": images[train_end:test_end],
                "eval": images[test_end:]
            }
            for split_name, imgs in splits.items():
                for img in imgs:
                    dest = self.output_dir / split_name / class_dir.name / img.name
                    shutil.copy2(img, dest)
SOURCE_DATASET_DIR = "./your_dataset"  # Replace with your dataset path
OUTPUT_DIR = "./dataset_split"
DatasetSplitter(SOURCE_DATASET_DIR, OUTPUT_DIR).split()
print("Dataset successfully split into train/test/eval.")
