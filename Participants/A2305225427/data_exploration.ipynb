import os
import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from PIL import Image
from collections import Counter

ROOT_DIR = "/kaggle/input/spacenet-an-optimally-distributed-astronomy-data/SpaceNet.FLARE.imam_alam"
VALID_EXTENSIONS = ('.png', '.jpg', '.jpeg', '.bmp', '.tif', '.tiff')

label_dirs = [
    folder for folder in os.listdir(ROOT_DIR)
    if os.path.isdir(os.path.join(ROOT_DIR, folder))
]

print("Classes found:", label_dirs)
print("Number of classes:", len(label_dirs))

image_stats = {}

for label in label_dirs:
    folder_path = os.path.join(ROOT_DIR, label)
    image_files = [
        file for file in os.listdir(folder_path)
        if file.lower().endswith(VALID_EXTENSIONS)
    ]
    image_stats[label] = len(image_files)

print(image_stats)

stats_df = (
    pd.DataFrame.from_dict(image_stats, orient="index", columns=["image_count"])
      .sort_values(by="image_count", ascending=False)
)

plt.figure(figsize=(10, 5))
plt.bar(stats_df.index, stats_df["image_count"])
plt.xticks(rotation=45, ha="right")
plt.ylabel("Number of Images")
plt.title("Class Distribution of SpaceNet.FLARE Dataset")
plt.tight_layout()
plt.show()

img_sizes = []
img_types = []

for label in label_dirs:
    label_path = os.path.join(ROOT_DIR, label)
    for filename in os.listdir(label_path):
        img_file_path = os.path.join(label_path, filename)
        try:
            with Image.open(img_file_path) as img:
                img_sizes.append(img.size)   # (width, height)
                img_types.append(img.format)
        except Exception:
            continue

img_widths, img_heights = zip(*img_sizes)

print("Minimum resolution:", min(img_widths), "x", min(img_heights))
print("Maximum resolution:", max(img_widths), "x", max(img_heights))
print("Average resolution:", int(np.mean(img_widths)), "x", int(np.mean(img_heights)))

print("\nImage format distribution:")
print(Counter(img_types))
