import os
import random
from PIL import Image, ImageEnhance
from collections import defaultdict

ROOT_INPUT = "/kaggle/input"
detected_dataset = os.path.join(ROOT_INPUT, os.listdir(ROOT_INPUT)[0])
IMAGE_ROOT = os.path.join(detected_dataset, os.listdir(detected_dataset)[0])

label_to_images = {}

for label_name in os.listdir(IMAGE_ROOT):
    label_path = os.path.join(IMAGE_ROOT, label_name)
    if os.path.isdir(label_path):
        label_to_images[label_name] = [
            os.path.join(label_path, file)
            for file in os.listdir(label_path)
            if file.lower().endswith((".jpg", ".jpeg", ".png"))
        ]

print("Original class distribution:")
for label, files in label_to_images.items():
    print(f"{label}: {len(files)} images")

target_samples = max(len(files) for files in label_to_images.values())

def apply_random_transforms(image: Image.Image) -> Image.Image:
    if random.random() > 0.5:
        image = image.transpose(Image.FLIP_LEFT_RIGHT)

    image = image.rotate(random.choice([90, 180, 270]))

    image = ImageEnhance.Brightness(image).enhance(
        random.uniform(0.7, 1.3)
    )

    image = ImageEnhance.Contrast(image).enhance(
        random.uniform(0.7, 1.3)
    )

    return image

synthetic_samples = defaultdict(list)

for label, image_paths in label_to_images.items():
    missing = target_samples - len(image_paths)

    if missing <= 0:
        continue

    print(f"\nAugmenting class: {label}")

    for _ in range(missing):
        chosen_path = random.choice(image_paths)
        base_img = Image.open(chosen_path).convert("RGB")
        transformed_img = apply_random_transforms(base_img)
        synthetic_samples[label].append(transformed_img)

print("\nAugmentation summary:")
for label, imgs in synthetic_samples.items():
    print(f"{label}: {len(imgs)} augmented samples")

print("\nDataset balanced virtually (no files written).")
