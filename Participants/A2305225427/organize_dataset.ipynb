import os
import random
import pandas as pd
from typing import Mapping

class ImageDatasetSplitter:
    def __init__(
        self,
        root_path: str,
        ratios: Mapping[str, float],
        random_state: int = 42
    ):
        self.root_path = root_path
        self.ratios = ratios
        random.seed(random_state)

    def generate_splits(self) -> pd.DataFrame:
        dataset_rows = []

        label_names = [
            folder for folder in os.listdir(self.root_path)
            if os.path.isdir(os.path.join(self.root_path, folder))
        ]

        for label in label_names:
            label_dir = os.path.join(self.root_path, label)

            image_list = [
                fname for fname in os.listdir(label_dir)
                if fname.lower().endswith((".png", ".jpg", ".jpeg"))
            ]

            random.shuffle(image_list)
            num_images = len(image_list)

            train_cutoff = int(num_images * self.ratios["train"])
            test_cutoff = train_cutoff + int(num_images * self.ratios["test"])

            split_mapping = {
                "train": image_list[:train_cutoff],
                "test": image_list[train_cutoff:test_cutoff],
                "eval": image_list[test_cutoff:]
            }

            for split_name, split_files in split_mapping.items():
                for file_name in split_files:
                    dataset_rows.append({
                        "image_path": os.path.join(label_dir, file_name),
                        "class": label,
                        "split": split_name
                    })

        return pd.DataFrame(dataset_rows)

DATA_ROOT = "/kaggle/input/spacenet-an-optimally-distributed-astronomy-data/SpaceNet.FLARE.imam_alam"

DATA_SPLIT = {
    "train": 0.7,
    "test": 0.2,
    "eval": 0.1
}

dataset_splitter = ImageDatasetSplitter(
    root_path=DATA_ROOT,
    ratios=DATA_SPLIT
)

split_dataframe = dataset_splitter.generate_splits()
