import os
import shutil
import random
from typing import Tuple, List


class DatasetSplitter:
    def __init__(
        self,
        source_dir: str,
        target_dir: str,
        split_ratio: Tuple[float, float, float] = (0.7, 0.2, 0.1),
        seed: int = 42
    ):
        self.source_dir = source_dir
        self.target_dir = target_dir
        self.train_ratio, self.test_ratio, self.eval_ratio = split_ratio
        random.seed(seed)

    def _get_classes(self) -> List[str]:
        return [
            d for d in os.listdir(self.source_dir)
            if os.path.isdir(os.path.join(self.source_dir, d))
        ]

    def _create_dirs(self, class_name: str):
        for split in ["train", "test", "eval"]:
            os.makedirs(
                os.path.join(self.target_dir, split, class_name),
                exist_ok=True
            )

    def _copy_files(self, files: List[str], class_name: str, split: str):
        for file in files:
            src = os.path.join(self.source_dir, class_name, file)
            dst = os.path.join(self.target_dir, split, class_name, file)
            shutil.copy(src, dst)

    def split_dataset(self):
        classes = self._get_classes()

        for class_name in classes:
            class_path = os.path.join(self.source_dir, class_name)
            images = os.listdir(class_path)

            if not images:
                continue

            random.shuffle(images)
            self._create_dirs(class_name)

            total = len(images)
            train_end = int(total * self.train_ratio)
            test_end = train_end + int(total * self.test_ratio)

            self._copy_files(images[:train_end], class_name, "train")
            self._copy_files(images[train_end:test_end], class_name, "test")
            self._copy_files(images[test_end:], class_name, "eval")

        print("Dataset successfully split into train / test / eval.")
